<%= form_for( @category, html: {class: "form-inline", role: "form"} ) do |f| %>
	<h4>管理分类    <%= link_to "全部分类", categories_path %></h4>
	<div class = "form-group">
		<%= f.label :name, class: "sr-only" %>
		<%= f.text_field :name, class: "form-control", placeholder: "分类名" %>
	</div>
	<div class = "form-group">
		<%= f.label :nickname, "英文标识", class: "sr-only" %>
		<%= f.text_field :nickname, class: "form-control", placeholder: "英文标识" %>
	</div>
  <%= f.button "添加", class: "btn btn-primary"%>
<% end %>
