<%= form_for(@powerpoint, :html => {:multipart => true}) do |f| %>
	<%= render 'shared/error_msg', object: f.object %>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :attachment %><br>
    <%= f.file_field :attachment %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
		<%= f.select :category_id,  Category.order("name ASC").map {|c| [c.name, c.id]} %>
  </div>
	<div class="field">
		  <%= f.label :tag_list, "Tags (separated by commas)" %><br />
		  <%= f.text_field :tag_list %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
